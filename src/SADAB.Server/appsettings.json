{
  "Logging": {
    "LogLevel": {
      
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=sadab.db"
  },
  "JwtSettings": {
    "SecretKey": "YourSuperSecretKeyThatShouldBeAtLeast32CharactersLongForHS256",
    "Issuer": "SADAB.Server",
    "Audience": "SADAB.Client",
    "ExpirationHours": "24"
  },
  "CertificateSettings": {
    "ValidityDays": 60,
    "RefreshThresholdDays": 7,
    "KeySize": 2048,
    "Organization": "SADAB",
    "OrganizationalUnit": "Agent"
  },
  "DeploymentSettings": {
    "DeploymentsPath": "Deployments",
    "DefaultTimeoutMinutes": 30,
    "MaxTimeoutMinutes": 120
  },
  "PasswordSettings": {
    "RequireDigit": true,
    "RequireLowercase": true,
    "RequireUppercase": true,
    "RequireNonAlphanumeric": false,
    "RequiredLength": 8
  },
  "SwaggerSettings": {
    "Title": "SADAB API",
    "Version": "v1",
    "Description": "SADAB - Software Deployment and Inventory Management System"
  },
  "Messages": {
    "UserNameExists": "Username already exists",
    "EmailExists": "Email already exists",
    "UserCreationFailed": "Failed to create user",
    "InvalidCredentials": "Invalid username or password",
    "RegistrationError": "An error occurred during registration",
    "LoginError": "An error occurred during login",
    "DeploymentFolderNotFound": "Deployment folder '{0}' does not exist",
    "NoTargetAgents": "No target agents specified",
    "CertificateRequired": "Client certificate required",
    "InvalidCertificate": "Invalid certificate",
    "CertificateInvalid": "Current certificate is invalid",
    "ErrorOccurred": "An error occurred",
    "HeartbeatReceived": "Heartbeat received",
    "InventoryDataReceived": "Inventory data received"
  },
  "ServiceSettings": {
    "ServiceName": "SADAB Server",
    "CertificateHeaderName": "X-Client-Certificate-Thumbprint"
  }
}
